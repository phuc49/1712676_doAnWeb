
<!--===============================
=            Hero Area            =
================================-->

<section class="hero-area bg-1 text-center overly">
	<!-- Container Start -->
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<!-- Header Contetnt -->
				<div class="content-block">
					<h1>Mua hàng trực tuyến </h1>
					<p>Đăng ký tài khoản để nhận khuyến mãi <br> mua các sản phẩm yêu thích với giá ưu đãi</p>
					<div class="short-popular-category-list text-center">
						<h2>Mặt hàng thông dụng</h2>
						<ul class="list-inline">
							<li class="list-inline-item">
								<a href="dssp"><i class="fas fa-laptop"></i> Điện tử</a></li>
							<li class="list-inline-item">
								<a href="dssp"><i class="fas fa-tshirt"></i> Thời trang</a>
							</li>
							<li class="list-inline-item">
								<a href="dssp"><i class="fas fa-cookie"></i> Bánh kẹo</a>
							</li>
							<li class="list-inline-item">
								<a href="dssp"><i class="fas fa-puzzle-piece"></i> Đồ chơi</a>
							</li>
							<li class="list-inline-item">
								<a href="dssp"><i class="fas fa-book"></i> Sách</a>
							</li>
						</ul>
					</div>
					
				</div>
				<!-- Advance Search -->
				<div class="advance-search">
						<div class="container">
							<div class="row justify-content-center">
								<div class="col-lg-12 col-md-12 align-content-center">
										<form method="POST">
											<div class="form-row">
												<div class="form-group col-md-4">
													<input type="text" class="form-control my-2 my-lg-1" id="ten" value="{{ten}}" placeholder="Bạn cần tìm gì?">
												</div>
												<div class="form-group col-md-3">
													<select class="w-100 form-control mt-lg-1 mt-md-2">
														<option>Loại sản phẩm</option>
														<option value="1">Bán chạy nhất</option>
														<option value="2">Giá thấp nhất</option>
														<option value="4">Giá cao nhất</option>
													</select>
												</div>
												<div class="form-group col-md-3">
													<input type="text" class="form-control my-2 my-lg-1" id="inputLocation4" placeholder="Giá">
												</div>
												<div class="form-group col-md-2 align-self-center">
													<button type="submit" class="btn btn-primary">Tìm kiếm</button>
												</div>
											</div>
										</form>
								</div>
							</div>
					    </div>
				</div>	
			</div>
		</div>
	</div>
	<!-- Container End -->
</section>
