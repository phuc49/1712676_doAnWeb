<!--===========================================
=            Popular deals section            =
============================================-->


<section class="popular-deals section bg-gray">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="section-title">
					<h2>Sản phẩm bán chạy</h2>
					<p>Các sản phẩm bán chạy nhất trong tháng vừa qua, có thể bạn sẽ thích</p>
				</div>
			</div>
		</div>
		<div class="row">
			<!-- offer 01 -->
          
			<div class="col-lg-12">
				<div class="trending-ads-slide">
					{{#each dssp}}
					<div class="col-sm-12 col-lg-4">

                        <div class="product-item bg-light">
	                        <div class="card">
        
		                        <div class="thumb-content">
			<!-- <div class="price">$200</div> -->
			                        <a href= "/sp/{{ma_sp}}" >
				                        <img class="card-img-top img-fluid" src="/images/sp/{{ma_sp}}.jpg" alt="Card image cap">
			                        </a>
		                        </div>
		                        <div class="card-body">
		                            <h4 class="card-title"><a href="/sp/{{id}}">{{ten_sp}}</a></h4>
		                            <ul class="list-inline product-meta">
		    	                        <li class="list-inline-item">
		    		                        <a href="/sp/{{ma_sp}}"><i class="fa fa-folder-open-o"></i>{{ten_loai}}</a>
		    	                        </li>
		    	                        <li class="list-inline-item">
		    		                        <a href="#"><i class="fa fa-calendar"></i>{{gia}}</a>
		    	                        </li>
		                            </ul>
		                            <p class="card-text">"{{mo_ta}}"</p>
		                            <div class="product-ratings">
		    	                        <ul class="list-inline">
	                        	    		<li class="list-inline-item selected"><i class="fa fa-star"></i></li>
                        		    		<li class="list-inline-item selected"><i class="fa fa-star"></i></li>
                        		    		<li class="list-inline-item selected"><i class="fa fa-star"></i></li>
                        		    		<li class="list-inline-item selected"><i class="fa fa-star"></i></li>
                        		    		<li class="list-inline-item"><i class="fa fa-star"></i></li>
                        		    	</ul>
	                        	    </div>
	                        	</div>
                        	</div>
                        </div>
                    </div>
					{{/each}}
				</div>
			</div>						
		</div>		
	</div>
</section>

