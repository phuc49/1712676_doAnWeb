
<!--==================================
=            User Profile            =
===================================-->
<section class="dashboard section">
	<!-- Container Start -->
	<div class="container">
		<!-- Row Start -->
		<div class="row">
			<div class="col-md-10 offset-md-1 col-lg-4 offset-lg-0">
				<div class="sidebar">
					<!-- User Widget -->
					<div class="widget user-dashboard-profile">
						<!-- User Image -->
						<div class="profile-thumb">
							<img src="{{customer.image}}" alt="" class="rounded-circle">
						</div>
						<!-- User Name -->
						<h5 class="text-center">{{customer.name}}</h5>
		
						<a href="/users/profile-info" class="btn btn-main-sm">Chỉnh sửa thông tin</a>
					</div>

					<!-- Dashboard Links -->
					<div class="widget dashboard-links">
						<ul>
							<li><a class="my-1 d-inline-block" href="">Đơn hàng <span>(5)</span></a></li>
                            <li><a class="my-1 d-inline-block" href="/users/profile-info">Chỉnh sửa tài khoản</a></li>
							<li><a class="my-1 d-inline-block" href="/users/profile-account">Đổi mật khẩu </a></li>
							<li><a class="my-1 d-inline-block" href="/logout">Đăng xuất</a></li>
						</ul>
					</div>
					<div class="widget user-dashboard-profile">
						<a href="/orders/add" class="btn btn-main-sm">Đặt hàng</a>
					</div>
				</div>
			</div>
            
			<div class="col-md-10 offset-md-1 col-lg-8 offset-lg-0">
<!-- /////////////////////////////    CART         ////////////////////////////////////// -->
				<div class="widget dashboard-container my-adslist">
					<h3 class="widget-header">{{title}}</h3>
					<table class="table table-responsive product-dashboard-table">
						<thead>
							<tr>
								<th>Hình ảnh</th>
								<th class="text-center">Tên sản phẩm</th>
								
								<th class="text-center">Số lượng</th>
								<th class="text-center">Thành tiền</th>
								<th class="text-center">Tùy chỉnh</th>
							</tr>
						</thead>
						<tbody>
							{{#each dssp}}
							<tr>
								<td class="product-thumb">
									<img width="80px" height="auto" src="{{image}}" alt="image description"></td>
								<td class="product-details">
									<h3 class="title">{{name}}</h3>
									<span class="add-id"><strong>Giá: </strong> {{price}}</span>
								</td>
								<td class="product-category"><span class="categories">{{order_quantity}}</span></td>
								<td class="product-category"><span class="categories">{{line_total}}</span></td>
								<td class="action" data-title="Action">
									<div class="">
										<ul class="list-inline justify-content-center">
											<li class="list-inline-item">
												<a data-toggle="tooltip" data-placement="top" title="Edit" class="edit" href="">
													<i class="fas fa-pencil-alt"></i>
												</a>
											</li>
											<li class="list-inline-item">
												<a data-toggle="tooltip" data-placement="top" title="Delete" class="delete" href="">
													<i class="fas fa-trash-alt"></i>
												</a>
											</li>
										</ul>
									</div>
								</td>
                            {{/each}}
							
							
						</tbody>
					</table>

				</div>
				
				<!-- pagination -->
				<div class="pagination justify-content-center">
					<nav aria-label="Page navigation example">
						<ul class="pagination">
							<li class="page-item">
								<a class="page-link" href="#" aria-label="Previous">
									<span aria-hidden="true">&laquo;</span>
									<span class="sr-only">Previous</span>
								</a>
							</li>
							<li class="page-item"><a class="page-link" href="#">1</a></li>
							<li class="page-item active"><a class="page-link" href="#">2</a></li>
							<li class="page-item"><a class="page-link" href="#">3</a></li>
							<li class="page-item">
								<a class="page-link" href="#" aria-label="Next">
									<span aria-hidden="true">&raquo;</span>
									<span class="sr-only">Next</span>
								</a>
							</li>
						</ul>
					</nav>
				</div>
				<!-- pagination -->

			</div>
		</div>
		<!-- Row End -->
	</div>
	<!-- Container End -->
</section>
