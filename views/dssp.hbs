<section class="page-search">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<!-- Advance Search -->
				<div class="advance-search">
					<form method="GET">
						<div class="form-row">
							<div class="form-group col-md-3">
								<input type="text" class="form-control my-2 my-lg-0" id="input" name="name"
									placeholder="Bạn cần tìm gì" value="{{name}}">
							</div>


							<div class="form-group col-md-3 select-category">
								<select class="form-control my-2 my-lg-0" selected="{{name}}" name="category">
									<option value="">Tất cả</option>
									{{#each dsl}}
									<option value="{{id}}">{{name}}</option>
									{{/each}}
								</select>
							</div>

							<div class="form-group col-md-2">
								<input type="text" class="form-control my-2 my-lg-0" id="inputLocation4"
									placeholder="Giá" name="price" value="{{price}}">
							</div>
							<div class="form-group col-md-2">
								<input type="text" class="form-control my-2 my-lg-0" id="inputLocation4"
									placeholder="Giảm giá (%)" name="discount" value="{{discount}}">
							</div>
							<div class="form-group col-md-2">
								<button type="submit" class="btn btn-primary">Tìm kiếm</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>
<section class="section-sm">
	<div class="container">

		<div class="row">
			<div class="col-md-3">
				<div class="category-sidebar">
					<div class="widget category-list">
						<h4 class="widget-header">Tất cả các loại</h4>
						<ul class="category-list">
							{{#each dsl}}
							<li><a href="/product/?category={{id}}">{{name}} </a></li>
							{{/each}}
						</ul>
					</div>
				</div>
			</div>
			<div class="col-md-9">
				<a class="nav-link dropdown-toggle" data-toggle="dropdown" href="">Sắp xếp
				</a>
				<!-- Dropdown list -->
				<div class="dropdown-menu">
					<a class="dropdown-item" href="?{{qs}}&orderBy=mostPopular">Phổ biến nhất</a>
					<a class="dropdown-item" href="?{{qs}}&orderBy=lowestPrice">Giá thấp nhất</a>
					<a class="dropdown-item" href="?{{qs}}&orderBy=highestPrice">Giá cao nhất</a>
				</div>
				<div class="product-grid-list">
					<div class="row mt-30">
						{{#each dssp}}
						<div class="col-sm-12 col-lg-4 col-md-6">
							<!-- product card -->
							<div class="product-item bg-light">
								<div class="card">
									<div class="thumb-content">
										<!-- <div class="price">$200</div> -->
										<a href="/product/{{product_id}}">
											<img class="card-img-top img-fluid" src="{{image}}" alt="Card image cap">
										</a>
									</div>
									<div class="card-body">
										<h4 class="card-title"><a href="/product/{{product_id}}">{{product_name}}</a>
										</h4>
										<ul class="list-inline product-meta">
											<li class="list-inline-item">
												<a href="/product/{{product_id}}"><i
														class="fa fa-folder-open-o"></i>{{catogory_name}}</a>
											</li>
											<li class="list-inline-item">
												<a href="#"><i class="fa fa-calendar"></i>{{price}}</a>
											</li>
										</ul>
										<p class="card-text">{{description}}</p>

									</div>
								</div>
							</div>
						</div>
						{{/each}}
					</div>
				</div>
				<div class="pagination justify-content-center">
					<nav aria-label="Page navigation example">
						<ul class="pagination">
							<li class="page-item">
								<a class="page-link" href="?{{qs}}" aria-label="Previous">
									<span aria-hidden="true">&laquo;</span>
									<span class="sr-only">Previous</span>
								</a>
							</li>
							{{#each pageList}}
							{{#if active}}
							<li class="page-item active"><a class="page-link" href="?{{qs}}">{{page}}</a></li>
							{{else}}
							<li class="page-item"><a class="page-link" href="?{{qs}}">{{page}}</a>
							</li>
							{{/if}}
							{{/each}}
							<li class="page-item">
								<a class="page-link" href="?{{lastPageQs}}" aria-label="Next">
									<span aria-hidden="true">&raquo;</span>
									<span class="sr-only">Next</span>
								</a>
							</li>
						</ul>
					</nav>
				</div>
			</div>
		</div>
	</div>
</section>